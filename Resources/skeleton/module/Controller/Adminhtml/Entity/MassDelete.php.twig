<?php
namespace {{ namespace }}\Controller\Adminhtml\Article;

use {{ namespace }}\Model\Article;

/**
 * Class MassDelete
 * @package {{ namespace }}\Controller\Adminhtml\Article
 */
class MassDelete extends MassAction
{
    /**
     * @var string
     */
    protected $successMessage = 'A total of %1 record(s) have been deleted';
    /**
     * @var string
     */
    protected $errorMessage = 'An error occurred while deleting record(s).';

    /**
     * @param Article $article
     * @return $this
     */
    protected function doTheAction(Article $article)
    {
        $article->delete();
        return $this;
    }
}
